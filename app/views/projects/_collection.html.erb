<%- model_class = Project -%>
<div class="page-header">
  <h1><%=model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>#</th>
    <th><%= model_class.human_attribute_name(:title) %></th>
    <th><%= model_class.human_attribute_name(:text) %></th>
    <th>Created by</th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t('helpers.actions') %></th>
  </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.title %></td>
        <td><%= project.text %></td>
        <td><%= project.user.email %></td>
        <td><%=l project.created_at %></td>
        <td>
          <%= link_to t('helpers.links.show'), project_path(project) %>
          |
          <%= link_to t('helpers.links.edit'), edit_project_path(project) %>
          |
          <%= link_to t('helpers.links.destroy'),
                      project_path(project),
                      :method => :delete,
                      :data => { :confirm => t('helpers.links.confirm', :default => 'Are you sure?') }%>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('helpers.links.new'), new_project_path, :class => 'btn btn-primary pull-right' %>