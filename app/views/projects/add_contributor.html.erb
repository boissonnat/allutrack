<% content_for :title, "Add contributors" + @project.title %>
<div class="page-header">
  <h3>Add contributors</h3>
</div>

<%= form_for add_contributor_project_path(@project), :html => { :class => 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :contributors, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <textarea class="form-control" name="emails"></textarea>
        <span class="help-block">Enter all emails address seperated by ';'</span>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= link_to t("helpers.actions.cancel"), project_path(@project), :class => 'btn btn-default' %>
        <%= f.submit t("helpers.actions.add"), :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>




