<% content_for :title, "Add contributor" + @project.title %>
<div class="page-header">
  <h3>Add contributor</h3>
</div>

<%= form_for add_contributor_project_path(@project), :html => { :class => 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :contributor, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <select name="user_id" id="user_id" class="form-control">
          <%= options_from_collection_for_select(User.all, :id, :username) %>
        </select>

      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= link_to t("helpers.actions.cancel"), projects_path, :class => 'btn btn-default' %>
        <%= f.submit nil, :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>




