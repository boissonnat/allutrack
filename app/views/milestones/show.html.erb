<%- model_class = Milestone -%>
<div class="page-header">
  <div class="btn-group pull-right">
    <button type="button" class="btn btn-default">Actions</button>
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
        <li><%= link_to t('helpers.actions.back'), milestones_path, :class => 'btn btn-link'  %></li>
        <li><%= link_to t('helpers.actions.edit'), edit_milestone_path(@milestone), :class => 'btn btn-link' %></li>
        <li><%= link_to t('helpers.actions.delete'),
                    milestone_path(@milestone),
                    :method => 'delete',
                    :data => { :confirm => t('helpers.actions.confirm') }%>
                    :class => 'btn btn-link' %></li>
    </ul>
  </div>

  <h3><%=@milestone.project.title%> - <%=model_class.model_name.human.titleize %> #<%=@milestone.id%></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @milestone.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dueTo) %>:</strong></dt>
  <dd><%= @milestone.dueTo %></dd>
</dl>

<%= render 'issues/collection' %>

