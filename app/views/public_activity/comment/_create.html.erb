<td>
  <!-- Icon -->
  <i class="glyphicon glyphicon-comment text-muted big-icon"></i>
</td>
<td>
  <div class="row">
    <p class="small text-muted">
      <%=l activity.created_at, format: :usual_date%>
    </p>
    <p>
      <% if activity.owner == current_user %>
        <strong>You</strong>
      <%else%>
        <strong><%= activity.owner.username %></strong>
      <%end%>
      commented issue <%= link_to activity.trackable.issue.title, activity.trackable.issue %>
      at <%= link_to activity.trackable.issue.project.title, activity.trackable.issue.project %>
    </p>
  </div>
</td>
