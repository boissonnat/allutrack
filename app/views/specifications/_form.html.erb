<% if @specification.errors.any? %>
    <div class="alert alert-danger">
      <b><%= pluralize(@specification.errors.count, 'error') %> prohibited
        this specification from being saved:</b>
      <ul>
        <% @specification.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @specification, :html => { :class => 'form-horizontal' } do |f| %>
    <%=f.hidden_field :project_id%>
    <div class="form-group">
      <%= f.label :title, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :body, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <p class="text-right">
          I'm a
          <a data-toggle="modal" href="#markdownHelper" class="">
            markdown editor
          </a>
        </p>
        <%= f.text_area :body, :class => 'form-control', :rows => '20'%>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= link_to t("helpers.actions.cancel"), project_path(@specification.project), :class => 'btn btn-default' %>
        <%= f.submit nil, :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>

<%= render 'shared/markdown_helper' %>