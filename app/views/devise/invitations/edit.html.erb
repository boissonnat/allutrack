<% content_for :title, "Set password"%>
<div class="page-header">
  <h2><%= t 'devise.invitations.edit.header' %></h2>
</div>

<p>
  In order to finish your registration, you need to specify an username and a password
</p>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
    <%= devise_error_messages! %>

    <%= f.hidden_field :invitation_token %>
    <%= f.hidden_field :invitation_for_project %>

    <!-- Username -->
    <div class="form-group">
      <%= f.label :username, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.text_field :username, :class => 'form-control' %>
      </div>
    </div>

    <!-- Password -->
    <div class="form-group">
      <%= f.label :password, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
    </div>

    <!-- Confirm password -->
    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'col-md-2 control-label' %>
      <div class="col-md-10">
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
      </div>
    </div>

    <!-- Submit -->
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit t("devise.invitations.edit.submit_button"), :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>
